<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services                               http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>
        <service id="czende.gopay.gateway_factory" class="Czende\GoPayPlugin\GoPayGatewayFactory"/>
        <service id="czende.payum.gateway_factory_builder" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument type="service" id="czende.gopay.gateway_factory"/>
            <tag name="payum.gateway_factory_builder" factory="gopay"/>
        </service>
        <service id="czende.gopay.api" class="Czende\GoPayPlugin\Api\GoPayApi"/>
        <service id="czende.gopay.form.type.gateway_configuration" class="Czende\GoPayPlugin\Form\Type\GoPayGatewayConfigurationType">
            <tag name="sylius.gateway_configuration_type" type="gopay" label="czende.gopay_plugin.gateway_label"/>
            <tag name="form.type"/>
        </service>
        <service id="czende.gopay.action.gopay" class="Czende\GoPayPlugin\Action\GoPayAction">
            <argument type="service" id="czende.gopay.api"/>
            <argument type="service" id="payum"/>
            <tag name="payum.action" factory="gopay"/>
        </service>
        <service id="czende.gopay.action.notify" class="Czende\GoPayPlugin\Action\NotifyAction">
            <argument type="service" id="czende.gopay.api"/>
            <tag name="payum.action" factory="gopay"/>
        </service>
    </services>
</container>
